<%= form_with(model: @user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
        <div class="alert alert-danger">
        <h2>The form contains <%= pluralize(user.errors.count, "error") %></h2>

        <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :first_name, "First Name" %>
    <%= form.text_field :first_name, 
                        id: :user_first_name, 
                        :class => "form-control form-control-lg", 
                        :required => true %>
  </div>

  <div class="field form-group">
    <%= form.label :last_name, "Last Name" %>
    <%= form.text_field :last_name, 
                        id: :user_last_name, 
                        :class => "form-control form-control-lg",
                        :required => true %>
  </div>

  <div class="field form-group">
    <%= form.label :address_line_1, "Address Line 1" %>
    <%= form.text_field :address_line_1, 
                        id: :user_address_line_1, 
                        :class => "form-control form-control-lg",
                        :required => true %>
  </div>

  <div class="field form-group">
    <%= form.label :address_line_2, "Address Line 2" %>
    <%= form.text_field :address_line_2, 
                        id: :user_address_line_2, 
                        :class => "form-control form-control-lg" %>
  </div>

  <div class="field form-group">
    <%= form.label :town %>
    <%= form.text_field :town, 
                        id: :user_town, 
                        :class => "form-control form-control-lg",
                        :required => true %>
  </div>

  <div class="field form-group">
    <%= form.label :post_code, "Post Code" %>
    <%= form.text_field :post_code, 
                        id: :user_post_code, 
                        placeholder: "G11 6BL" , 
                        :class => "form-control form-control-lg", 
                        :required => true %>
  </div>

  <div class="field form-group">
    <%= form.label :tel_no, "Telephone Number" %>
    <%= form.text_field :tel_no, 
                        id: :user_tel_no, 
                        :class => "form-control form-control-lg",
                        :required => true %>
  </div>

  <div class="field form-group">
    <%= form.label :email %>
    <%= form.email_field :email, 
                         id: :user_email, 
                         :class => "form-control form-control-lg",
                         :required => true %>
    <small class="form-text text-muted">You'll be using it to log in.</small>
  </div>

  <div class="field form-group">
    <%= form.label :password, "Password" %>
    <%= form.password_field :password, 
                            id: :user_password, 
                            :class => "form-control form-control-lg",
                            :required => true %>
  </div>

  <div class="field form-group">
    <%= form.label :password_confirmation, "Confirm Password" %>
    <%= form.password_field :password_confirmation, 
                            id: :user_password_confirmation, 
                            :class => "form-control form-control-lg",
                            :required => true %>
  </div>

  <!--
  <div class="field">
    <%= form.label :type %>
    <%= form.text_field :type, id: :user_type %>
  </div>
  -->

  <div class="field form-group">
    <%= form.select :type, options_for_select([['Manager', 'Manager'], 
                                               ['Booking Clerk', 'BookingClerk'],
                                               ['Membership Clerk', 'MembershipClerk'],
                                               ['Member', 'Member'],
                                               ['User', 'User']]) %>
  </div>

  <div class="actions">
    <%= form.submit (form.object.new_record? ? "Create Account" : "Update Details"), :class => "btn btn-primary btn-block" %>
  </div>
<% end %>
